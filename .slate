# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Aliases
alias hyper ctrl;shift;alt;cmd

alias full      move screenOriginX;screenOriginY                 screenSizeX;screenSizeY
alias lefthalf  move screenOriginX;screenOriginY                 screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY   screenSizeX/2;screenSizeY
alias leftmost  move screenOriginX;screenOriginY                 screenSizeX*0.7;screenSizeY
alias rightmost move screenOriginX+screenSizeX*0.3;screenOriginY screenSizeX*0.7;screenSizeY
alias center    move screenOriginX+(screenSizeX/2)-(windowSizeX/2);screenOriginY+(screenSizeY/2)-(windowSizeY/2) windowSizeX;windowSizeY

# Positions
bind f:${hyper} ${full}
bind h:${hyper} ${lefthalf}
bind l:${hyper} ${righthalf}
bind g:${hyper} ${leftmost}
bind ;:${hyper} ${rightmost}
bind j:${hyper} ${center}

# App focus
bind b:${hyper} focus 'Firefox'
bind v:${hyper} focus 'MacVim'
bind c:${hyper} focus 'Code'
bind o:${hyper} focus 'Microsoft Outlook'
bind t:${hyper} focus 'iTerm2'
bind s:${hyper} focus 'Slack'
bind d:${hyper} focus 'Spotify'
bind i:${hyper} focus 'iTunes'

# Throw to monitors 0-2
bind 1:${hyper} throw 0 resize
bind 2:${hyper} throw 1 resize
bind 3:${hyper} throw 2 resize

# Window Hints
bind esc:cmd hint

# Disabled defaults

# Resize Bindings
# bind right:${hyper} resize +10% +0
